pipeline {
    agent any
    
    stages {
        
        stage('git clone') {
            steps {
                echo 'clonning the git repository'
                
            }
        }
      
        stage('build') {
            steps {
                echo 'building the code'
                
            }
        }
        stage('testing the code') {
            steps{
                echo 'testing the code'
                
            }
        }  
        stage('deploy') {
            steps {
                echo 'deploy the code'
                
                
            }
        }
        
    }
    
    
}
